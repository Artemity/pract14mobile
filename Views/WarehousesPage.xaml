<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pract14mobile.Views.WarehousesPage"
             Title="Склады">

    <StackLayout>
        <Label Text="Список складов" 
               FontSize="20" 
               HorizontalTextAlignment="Center"
               Margin="0,10,0,10"/>

        <ListView x:Name="lvWarehouses" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding Address}" 
                                   FontAttributes="Bold" 
                                   HorizontalOptions="Start"/>
                            <Label Text="{Binding ManagerLastName, StringFormat='Менеджер: {0}'}" 
                                   HorizontalOptions="Start"/>
                            <Label Text="{Binding Phone, StringFormat='Телефон: {0}'}" 
                                   HorizontalOptions="Start"
                                   TextColor="Gray"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Grid ColumnDefinitions="*,*,*" Margin="10,10">
            <Button Text="Добавить" 
                    x:Name="btnAdd" 
                    Clicked="btnAdd_Clicked" 
                    Grid.Column="0"
                    Margin="5"/>
            <Button Text="Редактировать" 
                    x:Name="btnEdit" 
                    Clicked="btnEdit_Clicked" 
                    Grid.Column="1"
                    Margin="5"/>
            <Button Text="Удалить" 
                    x:Name="btnDelete" 
                    Clicked="btnDelete_Clicked" 
                    Grid.Column="2"
                    Margin="5"/>
        </Grid>
    </StackLayout>
</ContentPage>