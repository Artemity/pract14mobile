<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pract14mobile.Views.AddEditStockItemPage"
             Title="Складская позиция">

    <ScrollView>
        <StackLayout Padding="20">
            <TableView x:Name="tvStockItem">
                <TableRoot>
                    <TableSection Title="Информация о позиции">
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="Склад:" VerticalOptions="Center"/>
                                <Picker x:Name="pickerWarehouse" 
                                        HorizontalOptions="FillAndExpand"
                                        Title="Выберите склад"
                                        ItemDisplayBinding="{Binding Address}"/>
                            </StackLayout>
                        </ViewCell>

                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="Товар:" VerticalOptions="Center"/>
                                <Picker x:Name="pickerProduct" 
                                        HorizontalOptions="FillAndExpand"
                                        Title="Выберите товар"
                                        ItemDisplayBinding="{Binding Name}"/>
                            </StackLayout>
                        </ViewCell>

                        <EntryCell x:Name="entryQuantity" 
                                   Label="Количество" 
                                   Text="{Binding Quantity}"
                                   Placeholder="Введите количество" 
                                   Keyboard="Numeric"/>
                    </TableSection>
                </TableRoot>
            </TableView>
            <Button Text="Сохранить" 
                    x:Name="btnSave" 
                    Clicked="btnSave_Clicked" 
                    Margin="10,10"/>
        </StackLayout>
    </ScrollView>
</ContentPage>